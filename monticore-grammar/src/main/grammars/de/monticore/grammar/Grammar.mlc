package de.monticore.grammar;

mlc Grammar {

  //export the grammar
  export "$projectDir/src/main/grammars" {
    include "de/monticore/grammar/Grammar.mc4";
  }

  //export handwritten code
  export "$projectDir/src/main/java" {
    include "de/monticore/grammar/grammar/**.java";

    // additional, general Java source code
    include "de/monticore/grammar/*.java";

    // pretty printer
    include "de/monticore/grammar/prettyprint/GrammarPrettyPrinter.java";

    // TODO: Discuss whether we want to include general CoCos here
  }

  // export all Java files generated from the grammar
  export "$projectDir/target/generated-sources/monticore/sourcecode" {
    include "de/monticore/grammar/grammar/**.java";
  }


  promote {
    mlc "de.monticore.literals.MCCommonLiterals";
    mlc "de.monticore.types.MCSimpleGenericTypes";
    include "$mp/com/google/common/**.class";
    include "$mp/org/apache/commons/lang3/StringUtils.class";
  }

  // TODO: check the following in the code, are these illegal?
   uses {
     // relations to the Grammar_WithConcepts language:
     include "$projectDir/src/main/java/de/monticore/grammar/prettyprint/Grammar_WithConceptsFullPrettyPrinter.java";
     include "$projectDir/target/generated-sources/monticore/sourcecode/de/monticore/grammar/grammar/grammar_withconcepts/Grammar_WithConceptsMill.java";
     include "$projectDir/target/generated-sources/monticore/sourcecode/de/monticore/grammar/grammar/grammar_withconcepts/_symboltable/IGrammar_WithConceptsArtifactScope.java";
     include "$projectDir/target/generated-sources/monticore/sourcecode/de/monticore/grammar/grammar/grammar_withconcepts/_symboltable/IGrammar_WithConceptsGlobalScope.java";
     include "$projectDir/target/generated-sources/monticore/sourcecode/de/monticore/grammar/grammar/grammar_withconcepts/_visitor/Grammar_WithConceptsTraverser.java";

     // used by GrammarSTCompleteTypes and GrammarScopesGenitor
     include "$projectDir/src/main/java/de/monticore/types/mcfullgenerictypes/MCFullGenericTypesMill.java";
   }
}
