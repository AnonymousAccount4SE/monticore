package de.monticore.types;

mlc MCBasicTypes {

  //export the grammar
  export "$projectDir/src/main/grammars" {
    include "de/monticore/types/MCBasicTypes.mc4";
  }

  //export handwritten code
  export "$projectDir/src/main/java" {
    include "de/monticore/types/mcbasictypes/**.java";
    include "de/monticore/types/prettyprint/MCBasicTypes**.java";
    include "de/monticore/types/MCBasicTypes**.java";
  }

  // export all Java files generated from the grammar
  export "$projectDir/target/generated-sources/monticore/sourcecode" {
    include "de/monticore/types/mcbasictypes/**.java";
  }

  promote {
    mlc "de.monticore.MCBasics";
  }

  // TBD: promote using the type check or consider it part of the language?
  promote {
    include "$projectDir/src/main/java/de/monticore/types/check/*.java";
  }

  // TODO: !!! remove the following in the code, these are illegal !!!
  uses {
    include "$projectDir/src/main/java/de/monticore/types/mccollectiontypes/_ast/ASTMCGenericType.java";
    include "$projectDir/src/main/java/de/monticore/types/prettyprint/MCFullGenericTypesFullPrettyPrinter.java";
    include "$projectDir/src/main/java/de/monticore/types/prettyprint/MCCollectionTypesFullPrettyPrinter.java";
  }
}
