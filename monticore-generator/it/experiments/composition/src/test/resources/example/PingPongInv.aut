// The ping pong game
automaton PingPong {
  autstate NoGame true <<initial>>;
  autstate Pung true && v1 && !false && v2 <<final>>;

  NoGame - startGame > Ping;

  Ping - stopGame > NoGame;
  Pong - stopGame > NoGame;

  autstate Ping var1 ;
  autstate Pong var2 <<final>>;

  Ping - returnBall > Pong;
  Pong - returnBall > Ping;
}
