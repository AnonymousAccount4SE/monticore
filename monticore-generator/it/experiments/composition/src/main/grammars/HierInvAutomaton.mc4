grammar HierInvAutomaton extends Automaton3 {

  // keep the old axiom
  start Automaton; 

  // redefine a nonterminal
    //todo rename to state, coco ProdAndExtendedProdUseSameAttrNameForDiffNTs is fixed
  State =  "autstate" Name
    Invariant
    ( "<<" ["initial"] ">>" | "<<" ["final"] ">>" )*
    ( ";" | StateBody );

  StateBody =  "{" (State | Transition)* "}" ;

}
