grammar HierarchicalAutomaton extends Automaton1 {

  // keep the old start
  start Automaton; 

  // redefine a nonterminal
    //todo rename to state, coco ProdAndExtendedProdUseSameAttrNameForDiffNTs is fixed
  State =  "autstate" Name
    ( "<<" ["initial"] ">>" | "<<" ["final"] ">>" )*
    ( ";" | "{" (State | Transition)* "}" );

}
