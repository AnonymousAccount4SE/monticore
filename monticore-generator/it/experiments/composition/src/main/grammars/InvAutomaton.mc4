component grammar InvAutomaton
			extends de.monticore.MCBasics {
  
  Automaton =
    "automaton" Name "{" (State | Transition)* "}" ;

  external Invariant;

    //todo rename to state, coco ProdAndExtendedProdUseSameAttrNameForDiffNTs is fixed
  State = "autstate" Name
          Invariant
          ( "<<" ["initial"] ">>" | "<<" ["final"] ">>" )* ";" ;

  Transition =
    from:Name "-" input:Name ">" to:Name ";" ;

}
