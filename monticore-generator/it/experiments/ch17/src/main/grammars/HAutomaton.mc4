grammar HAutomaton extends SAutomaton {
  // keep the old start rule
  start Automaton;

  // redefine a nonterminal
  //todo rename to state, coco ProdAndExtendedProdUseSameAttrNameForDiffNTs is fixed
  State =  "autstate" Name
    ( "<<" ["initial"] ">>" | "<<" ["final"] ">>" )*
    ( ";" | "{" (State | Transition)* "}" );
}
