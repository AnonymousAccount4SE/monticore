grammar SAutomaton extends de.monticore.MCBasics {

 symbol scope Automaton =
   "automaton" Name "{" (State | Transition)* "}" ;

  //todo rename to state, coco ProdAndExtendedProdUseSameAttrNameForDiffNTs is fixed
 symbol State =
   "autstate" Name
 (("<<" ["initial"] ">>" ) | ("<<" ["final"] ">>" ))* ";" ;

 Transition =
   from:Name@State "-" input:Name ">" to:Name@State ";" ;
}
