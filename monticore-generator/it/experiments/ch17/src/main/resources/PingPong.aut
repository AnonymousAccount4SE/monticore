// The ping pong game
automaton PingPong {
  autstate NoGame <<initial>> <<final>>;
  autstate Ping;
  autstate Pong <<final>>;

  NoGame - startGame > Ping;

  Ping - stopGame > NoGame;
  Pong - stopGame > NoGame;

  Ping - returnBall > Pong;
  Pong - returnBall > Ping;
}
