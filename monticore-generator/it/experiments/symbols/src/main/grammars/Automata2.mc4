grammar Automata extends de.monticore.literals.MCCommonLiterals {

  symbol scope Automaton =
    "automaton" Name "{" (State | Transition)* "}" ;

  symbol scope State =
    "state" Name
    (("<<" ["initial"] ">>" ) | ("<<" ["final"] ">>" ))*
    ( ("{" (State | Transition | Counter)* "}") | ";") ;

  Transition =
    from:Name@State "-" input:Name ">" to:Name@State ";" ;

}

